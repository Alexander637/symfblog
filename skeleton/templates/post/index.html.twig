{% extends 'base.html.twig' %}

{% block title %}Posts for Guests{% endblock %}

{% block body %}

    <h1>Write your comment!</h1>

    {% for post in posts %}
        <h3><a href={{ path('post', {slug: post.slug}) }}>{{ post.title }}</a></h3>
        <h4>{{ post.text }}</h4>

    {% endfor %}

{% endblock %}


